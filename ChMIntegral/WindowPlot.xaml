<Window x:Class="ChMIntegral.WindowPlot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Name="mainWnd"
        Width="600"
        Height="500"
        Title="Графік"
        SizeToContent="WidthAndHeight">
    <Grid>
        <Canvas Background="White" ClipToBounds="True" Name="canvasPlot" HorizontalAlignment="Center" Height="400" VerticalAlignment="Top" Width="600">
        </Canvas>
        <Canvas Background="Transparent" Name="canvasLabel" HorizontalAlignment="Center" Height="400" VerticalAlignment="Top" Width="600" MouseMove="canvasLabel_MouseMove" MouseWheel="canvasLabel_MouseWheel">
            <Label Content="" Name="textBlockMousePos" Padding="3,2,3,2" BorderBrush="Gold" Background="White" BorderThickness="1"/>
        </Canvas>
    </Grid>
</Window>

